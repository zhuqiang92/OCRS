<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

<!--针对login画面的Servlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ch04.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/servlet/Login</url-pattern>
    </servlet-mapping>

<!--针对学生选课画面的Servlet-->
    <servlet>
        <servlet-name>ChooseCourseServlet</servlet-name>
        <servlet-class>ch04.servlet.ChooseCourse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChooseCourseServlet</servlet-name>
        <url-pattern>/servlet/ChooseCourse</url-pattern>
    </servlet-mapping>
    
<!--针对学生选课结果画面的Servlet-->
    <servlet>
        <servlet-name>ViewCourseServlet</servlet-name>
        <servlet-class>ch04.servlet.ViewCourse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCourseServlet</servlet-name>
        <url-pattern>/servlet/ViewCourse</url-pattern>
    </servlet-mapping>

<!--针对教师查看选课结果画面的Servlet-->
    <servlet>
        <servlet-name>CourseListServlet</servlet-name>
        <servlet-class>ch04.servlet.CourseList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseListServlet</servlet-name>
        <url-pattern>/servlet/CourseList</url-pattern>
    </servlet-mapping>

<!--针对教师添加课程画面的Servlet-->
    <servlet>
        <servlet-name>AddCourseServlet</servlet-name>
        <servlet-class>ch04.servlet.AddCourse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCourseServlet</servlet-name>
        <url-pattern>/servlet/AddCourse</url-pattern>
    </servlet-mapping>
    
</web-app>
